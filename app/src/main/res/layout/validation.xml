<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="numberPassword" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/sept"
                    style="@style/BoutonCode"
                    android:text="7" />

                <Button
                    android:id="@+id/huit"
                    style="@style/BoutonCode"
                    android:text="8" />

                <Button
                    android:id="@+id/neuf"
                    style="@style/BoutonCode"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/quatre"
                    style="@style/BoutonCode"
                    android:text="4" />

                <Button
                    android:id="@+id/cinq"
                    style="@style/BoutonCode"
                    android:text="5" />

                <Button
                    android:id="@+id/six"
                    style="@style/BoutonCode"
                    android:text="6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/un"
                    style="@style/BoutonCode"
                    android:text="1" />

                <Button
                    android:id="@+id/deux"
                    style="@style/BoutonCode"
                    android:text="2" />

                <Button
                    android:id="@+id/trois"
                    style="@style/BoutonCode"
                    android:text="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/toutEffacer"
                    style="@style/BoutonCodeDiff"
                    android:text="C" />

                <Button
                    android:id="@+id/zero"
                    style="@style/BoutonCode"
                    android:text="0" />

                <Button
                    android:id="@+id/effacer"
                    style="@style/BoutonCodeDiff"
                    android:text="E" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/buttonValider"
            style="@style/BoutonTheme"
            android:text="CONFIRMER"
            tools:layout_editor_absoluteY="390dp" />

        <Button
            android:id="@+id/buttonAnnuler"
            style="@style/BoutonThemeAnnuler"
            android:text="ANNULER"
            tools:layout_editor_absoluteY="468dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>