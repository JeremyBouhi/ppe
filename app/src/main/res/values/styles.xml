<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeFonce</item>
        <item name="colorAccent">@color/orangeClair</item>

    </style>

    <style name="BoutonTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginTop">@dimen/layoutMarginTop</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BoutonThemeAnnuler" parent="BoutonTheme">
        <item name="android:background">@color/orangeFonce</item>
        <item name="android:layout_width">200dp</item>

    </style>

    <style name="TopDeco">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@color/orangeClair</item>
        <item name="android:layout_marginTop">@dimen/layoutMarginTop</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextConfirm">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginTop">@dimen/layoutMarginTopConfirm</item>
        <item name="android:layout_marginBottom">@dimen/layoutMarginBottomConfirm</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:color">@color/noir</item>
    </style>

    <style name="ListeCategories">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:color">@color/noir</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
